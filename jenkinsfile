pipeline {
    agent any
    environment {
        NODE_HOME = tool 'NodeJs' // Matches the name you set in Global Tool Configuration
        PATH = "${NODE_HOME}/bin:${env.PATH}"
        AWS_REGION = 'ap-south-1' // Replace with your AWS region
        S3_BUCKET = 'react-projectt' // Replace with your bucket name
    }
    stages {
        stage('Checkout Code') {
            steps {
               git branch: 'main', url: 'https://github.com/prachileena/crm-dashboard.git'
               sh 'pwd && ls -l' // Debugging workspace and folder structure
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
                sh 'ls -l' // Verify node_modules installed
            }
        }
        stage('Build React App') {
            steps {
                sh 'npm run build'
                sh 'ls -l build/' // Verify the build directory exists
            }
        }
        stage('Deploy to S3') {
            steps {
                withAWS(region: "${env.AWS_REGION}", credentials: 'aws-credentials') {
                    sh 'aws s3 sync build/ s3://react-projectt --delete'
                }
            }
        }
    }
    post {
        success {
            echo 'Deployment Successful!'
        }
        failure {
            echo 'Deployment Failed!'
        }
    }
}
